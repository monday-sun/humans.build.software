<form
  action="https://buttondown.com/api/emails/embed-subscribe/humans.build.software"
  method="post"
  target="popupwindow"
  onsubmit="window.open('https://blog.humans.build.software', 'popupwindow')"
  class="embeddable-buttondown-form"
>
  <label for="bd-email">Enter your email:</label>
  <input type="email" name="email" id="bd-email" placeholder="you@example.com" required />
  <input type="submit" value="Subscribe" />
</form>

<style>
  .embeddable-buttondown-form {
    display: flex;
    align-items: center; /* Align items vertically */
    gap: 0.5rem; /* Add some space between elements */
  }
  .embeddable-buttondown-form label {
    /* Visually hide the label but keep it accessible */
    position: absolute;
    margin: -1px;
    padding: 0;
    width: 1px;
    height: 1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border-width: 0;
    white-space: nowrap;
  }
  .embeddable-buttondown-form input[type='email'] {
    border: 1px solid var(--neutral-400); /* Use theme variable */
    border-radius: 4px;
    padding: 0.4rem 0.6rem;
    font-size: 0.9rem;
  }
  .embeddable-buttondown-form input[type='email']:focus {
    /* Use box-shadow for focus indicator */
    outline: none;
    box-shadow: 0 0 0 2px var(--action-color);
  }

  .embeddable-buttondown-form input[type='submit'] {
    transition: background-color 0.2s ease;
    cursor: pointer;
    border: none;
    border-radius: 4px;
    background-color: var(--action-color); /* Use theme variable */
    padding: 0.4rem 0.8rem;
    color: var(--neutral-100); /* Use theme variable */
    font-size: 0.9rem;
  }
  .embeddable-buttondown-form input[type='submit']:hover {
    background-color: var(--action-color-state); /* Use theme variable */
  }
  .embeddable-buttondown-form p {
    margin: 0; /* Reset default paragraph margin */
    line-height: 1; /* Adjust line height if needed */
  }
  .embeddable-buttondown-form p a {
    color: var(--neutral-600); /* Use theme variable */
    text-decoration: none;
  }
  .embeddable-buttondown-form p a:hover {
    text-decoration: underline;
  }

  /* Dark mode specific style */
  :global(.darkmode) .embeddable-buttondown-form input[type='submit'] {
    color: var(--neutral-900);
  }
</style>
